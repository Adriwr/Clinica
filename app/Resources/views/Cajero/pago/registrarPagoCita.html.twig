{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Registrar Cajero</h3>
{% endblock %}

{% block content %}
    <div class="row" ng-controller="CajeroCtrl">
        <div class="col-xs-5">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Registrar Pago de cita
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-notice">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    {{ form_start(formPagoCita , {'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_widget(formPagoCita) }}
                    {{ form_end(formPagoCita) }}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}

