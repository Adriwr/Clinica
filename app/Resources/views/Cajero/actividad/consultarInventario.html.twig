{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Mostrar Inventario</h3>
{% endblock %}

{% block content %}
    {{ dump(productos) }}
	{% if productos %}
		<div class="panel panel-green">
			<div class="panel-heading">
                Productos
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
            	<table class="table table-striped table-responsive"
       					datatables="datatables"
       					content="datosTabla"
       					columns="aoCols"
       					events="events"
        				>
    			<thead>
    				<tr>
	        			<th>Nombre</th>
    	    			<th>Precio</th>
    	    			<th>Existencias</th>
    				</tr>
    			</thead>
    			<tbody>
					{% for producto in productos %}
						<tr>
                            <td>{{ producto.nombre }}</td>
                            <td>{{ producto.precio }}</td>
                            <td>{{ producto.existencias }}</td>
    		    		</tr>
	    			{% endfor %}
    			</tbody>
	    		</table>
            </div>
        </div>
		
	{% else %}
		<p class='text-danger'>No existen medicamentos registrados</p>
	{% endif %}	
	
{% endblock %}

{% block javascript %}
    {# Plugins requeridos por el modulo #}

{% endblock %}
