{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Consultar Pacientes</h3>
{% endblock %}

{% block content %}
    {% if pacientes %}
        <div class="panel panel-green">
            <div class="panel-heading">
                Pacientes
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-responsive"
                       datatables="datatables"
                       content="datosTabla"
                       columns="aoCols"
                       events="events"
                >
                    <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Sexo</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Direcci√≥n</th>
                        <th>Tel. Particular</th>
                        <th>Tel. Para emergencias</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for paciente in pacientes %}
                        <tr>
                            <td>{{ paciente.nombre }} {{ paciente.apellidos}}</td>
                            <td>{{ paciente.sexo }}</td>
                            <td>{{ paciente.fechaNacimiento	 }}</td>
                            <td>{{ paciente.direccion }}</td>
                            <td>{{ paciente.telefonoParticular }}</td>
                            <td>{{ paciente.telefonoEmergencia }}</td>
                            <td><a href="{{ path('enfermera_agendar_cita', {'id':paciente.id}) }}"> <button class="btn btn-success"> Agendar cita </button> </a> </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    {% else %}
        <p class='text-danger'> No hay pacientes registrados </p>
    {% endif %}

{% endblock %}

