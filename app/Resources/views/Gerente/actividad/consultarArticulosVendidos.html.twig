{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Consulta de articulos vendidos en {{ mensaje }}</h3>
{% endblock %}

{% block content %}

    {% if articulos %}
        <table class="table">
            <tr>
                <th>Fecha</th>
                <th>Monto</th>
                <th>Lista de articulos en la venta</th>
            </tr>
    {% for articulo in articulos %}
        <td> {{ articulo.fecha|date('Y-m-d') }}</td>
        <td> ${{ articulo.monto }}</td>
        <td>
        <ul>
            {% if articulo.productos %}
                {% for producto in articulo.productos %}
                    <li>{{ producto.nombre }}</li>
                {% endfor %}
            {% endif %}

        </ul>
        </td>
    {% endfor %}
        </table>
        {% else %}
            <div class="warning">
                <p class='text-danger'> No hay ventas para mostrar </p>
            </div>
    {% endif %}
{% endblock %}

