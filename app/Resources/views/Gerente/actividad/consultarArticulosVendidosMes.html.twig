{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Consulta de articulos vendidos en {{ mensaje }}</h3>
{% endblock %}

{% block content %}
    {% if articulos %}
        <table class="table table-striped">
        {% for articulo in articulos %}
            <tr>
                {% if ("now"|date('Y'))|number_format == (articulo.fecha|date('Y'))|number_format %}
                    {% if ("now"|date('m'))|number_format == (articulo.fecha|date('m'))|number_format %}
                                <td class="success">
                                    {{ articulo.nombre }}
                                </td>
                                <td class="warning">
                                    {{ articulo.numero }}
                                </td>
                    {% endif %}
                {% endif %}

            </tr>

        {% endfor %}
        </table>
    {% else %}
        <div class="warning">
            <p class='text-danger'> No hay ventas para mostrar </p>
        </div>
    {% endif %}
{% endblock %}

