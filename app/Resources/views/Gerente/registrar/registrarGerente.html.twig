{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Registrar Gerente</h3>
{% endblock %}

{% block content %}
    <div class="row" ng-controller="GerenteCtrl">
        <div class="col-xs-5">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Registrar gerente
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    {{ form_start(formUsuario , {'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_label(formUsuario.email) }}
                    {{ form_widget(formUsuario.email) }}
                    {{ form_errors(formUsuario.email) }}
                    {{ form_label(formUsuario.plainPassword.first,'Password') }}
                    {{ form_widget(formUsuario.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Contraseña' } }) }}
                    {{ form_errors(formUsuario.plainPassword.first) }}
                    {{ form_label(formUsuario.plainPassword.second,'Repetir password') }}
                    {{ form_widget(formUsuario.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Repetir contraseña' } }) }}
                    {{ form_errors(formUsuario.plainPassword.second) }}
                    {{ form_rest(formUsuario) }}
                    {{ form_end(formUsuario) }}
                    <!-- Nav tabs -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <div class="col-xs-7">
            <div class="panel panel-green">
                <div class="panel-heading">
                    Gerentes
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    {{ include(':Gerente/registrar/parts:gerente_tabla.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {# Plugins requeridos por el modulo #}

{% endblock %}

{% block angular %}
    {# Servicios de AngularJS #}
    <script type="text/javascript" src="{{ asset('js/app/gerente/registrar/services/factories.js') }}"></script>
    {# Controles primarios de AngularJS #}
    <script type="text/javascript" src="{{ asset('js/app/gerente/registrar/controllers/gerente.js') }}"></script>
    {# Controles secundarios de AngularJS #}
{% endblock %}