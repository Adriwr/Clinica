{% extends '::loginBase.html.twig' %}

{% block  title %}
    Login
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Iniciar Sesión</h3>
                </div>
                <div class="panel-body">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData) }}</div>
                    {% endif %}
                    <form action="{{ path('fos_user_security_check') }}" method="post" class="form-horizontal" role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" type="email"  id="username" name="_username" required="required" value="{{ last_username }}" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password"  type="password" value=""  id="password" name="_password" required="required"  >
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Recordarme
                                </label>
                                <label>
                                    <a href="{{ path('registrar_paciente') }}">Aún no tengo cuenta, quiero registrarme</a>
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-success pull-right">
                                    <i class="fa fa-key"></i>
                                    Login
                                </button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
