{% extends '::loginBase.html.twig' %}

{% block  title %}
    Login
{% endblock %}

{% block css %}

{% endblock %}

{% block content %}
    <div class="col-sm-6 col-sm-offset-3 container">
        <div class="row text-center">
            <h2 class="font-bold"> <i class="fa fa-power-off"></i> Login</h2>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData) }}</div>
            {% endif %}
            <form action="{{ path('fos_user_security_check') }}" method="post" class="form-horizontal" role="form">
                <div class="form-group col-xs-12">
                    <label class="control-label col-sm-4" for="username">Usuario:</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="username" name="_username" required="required" value="{{ last_username }}" placeholder="Introduzca el usuario">
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <label class="control-label col-sm-4" for="password">Password:</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Introduzca la contraseÃ±a">
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <button type="submit" class="btn btn-success pull-right">
                        <i class="fa fa-key"></i>
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

