                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="duracionR" ng-model="recomendacion.duracion">
                                </div>
                            </div>

                            <button class="btn btn-primary pull-right" style="margin: 5px" ng-click="agregarRecomendacion()">
                                Agregar
