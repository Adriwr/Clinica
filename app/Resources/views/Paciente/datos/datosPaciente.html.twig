{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Mis Datos</h3>
{% endblock %}

{% block content %}
        <div class="panel panel-green" ng-controller="DatosPacienteCtrl">
            <div class="panel-heading">
                {{ paciente.nombre }}
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-responsive" ng-hide="vistaCambiar">
                    <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Sexo</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Direcci√≥n</th>
                        <th>Tel. Particular</th>
                        <th>Tel. Para emergencias</th>
                    </tr>
                    </thead>
                    <tbody>
                       <tr>
                           <td>
                               {{ paciente.nombre }} {{ paciente.apellidos }}
                           </td>

                        <td>
                            {{ paciente.sexo }}
                        </td>
                           <td>
                               {{ paciente.fechaNacimiento|date('Y-M-d') }}
                           </td>
                           <td>
                               {{ paciente.calle }} {{ paciente.numero }} {{ paciente.colonia }} {{ paciente.estado }} {{ paciente.estado }} {{ paciente.pais}}
                           </td>
                           <td>
                               {{ paciente.telefonoParticular }}
                           </td>
                           <td>
                               {{ paciente.telefonoEmergencia }}
                           </td>
                       </tr>
                    </tbody>
                </table>
                <form ng-show="vistaCambiar">
                    <div class="form-group row">
                        <label for="nombre" class="col-sm-2 form-control-label">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" value="{{ paciente.nombre }}" class="form-control" id="nombre" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="apellidos" class="col-sm-2 form-control-label">Apellidos</label>
                        <div class="col-sm-10">
                            <input type="text" value="{{ paciente.apellidos }}" class="form-control" id="apellidos" ng-model="paciente.apellidos">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="sexo" class="col-sm-2 form-control-label">Sexo</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="apellidos">
                                <option value="H" >Hombre</option>
                                <option value="M" >Mujer</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="fecha" class="col-sm-2 form-control-label">Fecha de nacimiento</label>
                        <div class="col-sm-10">
                            <input type="date" value="{{ paciente.fechaNacimiento|date('Y-m-d') }}" class="form-control" id="fecha" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="calle" class="col-sm-2 form-control-label">Calle</label>
                        <div class="col-sm-10">
                            <input type="text" value="{{ paciente.calle }}" class="form-control" id="calle" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="numero" class="col-sm-2 form-control-label">Numero</label>
                        <div class="col-sm-10">
                            <input type="text" value="{{ paciente.numero }}" class="form-control" id="numero" ng-model="paciente.numero">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colonia" class="col-sm-2 form-control-label">Colonia</label>
                        <div class="col-sm-10">
                            <input type="text" value="{{ paciente.colonia }}" class="form-control" id="colonia" ng-model="paciente.colonia">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="estado" class="col-sm-2 form-control-label">Estado</label>
                        <div class="col-sm-10">
                            <input type="text" value="{{ paciente.estado }}" class="form-control" id="estado" ng-model="paciente.estado">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="telefonoParticular" class="col-sm-2 form-control-label">Telefono Particular</label>
                        <div class="col-sm-10">
                            <input type="text" value="{{ paciente.telefonoParticular }}" class="form-control" id="telefonoParticular" ng-model="paciente.telefonoParticular">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="telefonoEmergencia" class="col-sm-2 form-control-label">Telefono Emergencia</label>
                        <div class="col-sm-10">
                            <input type="text" value="{{ paciente.telefonoEmergencia }}" class="form-control" id="telefonoEmergencia" ng-model="paciente.telefonoEmergencia">
                        </div>
                    </div>
                </form>
                <button class="btn btn-primary" ng-click="changeView('{{ paciente.nombre}}')" ng-hide="vistaCambiar">Actualizar datos</button>
                <button class="btn btn-warning" ng-click="cancel()" ng-show="vistaCambiar" >Cancelar</button>
                <button class="btn btn-success" ng-click="changeView()" ng-show="vistaCambiar">Guardar</button>

            </div>
        </div>
{% endblock %}

{% block angular %}
    <script type="text/javascript" src="{{ asset('js/app/paciente/datos/controllers/datosPaciente.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/app/paciente/datos/services/factories.js') }}"></script>
    <script>

    </script>

{% endblock %}
