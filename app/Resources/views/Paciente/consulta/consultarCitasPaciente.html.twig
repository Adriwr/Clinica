{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Consultar Citas</h3>
{% endblock %}

{% block content %}
	{% if citas %}
		<div class="panel panel-green" ng-controller="ConsultarCitaCtrl">
			<div class="panel-heading">
                Citas agendadas
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
            	<table class="table table-striped table-responsive">
    			<thead>
    				<tr>
	        			<th>Consultorio</th>
    	    			<th>Fecha y Hora</th>
    	    			<th>Doctor</th>
                        <th align="center">Cancelar</th>
    				</tr>
    			</thead>
    			<tbody>
					{% for cita in citas %}
                        <tr>
                            <td>{{ cita.consultorio }}</td>
                            <td>{{ cita.fecha }}</td>
                            <td>{{ cita.medico   }}</td>
                            <td align="center"><button class="btn btn-warning" ng-click="cancelDate('{{ cita.id }}')"><span class="text-success"><i class="fa fa-times"  style="font-size: 15px;cursor: pointer;"></i></span>Cancelar cita</button></td>
                        </tr>
	    			{% endfor %}
    			</tbody>
	    		</table>
            </div>
        </div>
		
	{% else %}
		<p class='text-danger'> No hay citas agendadas </p>
	{% endif %}	
	
{% endblock %}

{% block angular %}
    <script type="text/javascript" src="{{ asset('js/app/paciente/cita/controllers/consultar.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/app/paciente/cita/services/factories.js') }}"></script>

{% endblock %}
