{% extends 'base.html.twig' %}

{% block css %}

{%  endblock %}

{% block dashboard %}
    <h3 class="page-header">Consultar Citas</h3>
{% endblock %}

{% block content %}
    {{ dump(citas) }}
	{% if citas %}
		<div class="panel panel-green">
			<div class="panel-heading">
                Citas agendadas
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
            	<table class="table table-striped table-responsive"
       					datatables="datatables"
       					content="datosTabla"
       					columns="aoCols"
       					events="events"
        				>
    			<thead>
    				<tr>
	        			<th>Consultorio</th>
    	    			<th>Fecha y Hora</th>
    	    			<th>Doctor</th>
    				</tr>
    			</thead>
    			<tbody>
					{% for cita in citas %}
                        <tr>
                            <td>{{ cita.consultorio }}</td>
                            <td>{{ cita.fecha }}</td>
                            <td>{{ cita.medico   }}</td>
                        </tr>
	    			{% endfor %}
    			</tbody>
	    		</table>
            </div>
        </div>
		
	{% else %}
		<p class='text-danger'> No hay citas agendadas </p>
	{% endif %}	
	
{% endblock %}

{% block javascript %}
    {# Plugins requeridos por el modulo #}

{% endblock %}
